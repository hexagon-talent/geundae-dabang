<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gundaero.alley.domain.photo.dao.UserTourLocationDAO">

    <resultMap id="UserTourLocationMap" type="com.gundaero.alley.domain.photo.entity.UserTourLocation">
        <id     column="id"                property="id"/>
        <result column="user_id"           property="userId"/>
        <result column="tour_location_id"  property="tourLocationId"/>
        <result column="photo_url"         property="photoUrl"/>
        <result column="created_at"        property="createdAt"/>
        <result column="updated_at"        property="updatedAt"/>
    </resultMap>


    <insert id="upsert" parameterType="com.gundaero.alley.domain.photo.entity.UserTourLocation">
        INSERT INTO user_tour_location (user_id, tour_location_id, photo_url)
        VALUES (#{userId}, #{tourLocationId}, #{photoUrl})
        ON DUPLICATE KEY UPDATE
        photo_url = VALUES(photo_url),
        updated_at = CURRENT_TIMESTAMP
    </insert>

    <select id="findOne" resultMap="UserTourLocationMap">
        SELECT id, user_id, tour_location_id, photo_url, created_at, updated_at
        FROM user_tour_location
        WHERE user_id = #{userId}
        AND tour_location_id = #{locationId}
        LIMIT 1
    </select>

</mapper>