ENV=prod
SPRING_PROFILES_ACTIVE=prod
SERVER_PORT=8080
TZ=Asia/Seoul

# DB (컨테이너 네트워크 기준)
SPRING_DATASOURCE_URL=jdbc:mysql://mysql:3306/appdb?useSSL=false&characterEncoding=utf8&serverTimezone=Asia/Seoul
SPRING_DATASOURCE_USERNAME=YOUR_PROD_DB_USER
SPRING_DATASOURCE_PASSWORD=YOUR_PROD_DB_PASSWORD
MYSQL_ROOT_PASSWORD=CHANGE_ME_PROD_ROOT

# Redis
SPRING_REDIS_HOST=redis
SPRING_REDIS_PORT=6379
SPRING_REDIS_PASSWORD=

# S3
S3_BUCKET=your-prod-bucket
S3_REGION=ap-northeast-2

# CORS (운영 도메인만)
CORS_ALLOWED_ORIGINS=https://your-domain.example

# OAuth2
KAKAO_CLIENT_ID=YOUR_PROD_KAKAO_REST_API_KEY
KAKAO_REDIRECT_URI=https://your-domain.example/login/oauth2/code/kakao

# Kakao Admin Key
KAKAO_ADMIN_KEY=CHANGE_ME_PROD

# TourAPI
TOURAPI_BASE_URL=https://apis.data.go.kr/B551011/KorService2
TOURAPI_APP_NAME=GEUNDAERO
TOURAPI_SERVICE_KEY=CHANGE_ME_PROD

# JWT
JWT_SECRET=CHANGE_ME_TO_A_STRONG_RANDOM_VALUE
JWT_ACCESS_TOKEN_TTL=900
JWT_REFRESH_TOKEN_TTL=1209600

# watchtower는 prod에서만 ON
WATCHTOWER_ENABLE=true

# CI/CD에서 푸시한 이미지
DOCKER_IMAGE=your-dockerhub-namespace/gundaero-alley-api:latest
