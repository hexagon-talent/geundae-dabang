upstream app_backend {
    server app:8080;
    keepalive 32;
}

# 80: ACME 경로만 제공, 나머지는 https로 리다이렉트
server {
    listen 80;
    server_name gundaero.kozow.com;

    # certbot 웹루트 (발급/갱신용)
    location ^~ /.well-known/acme-challenge/ {
        root /var/www/certbot;
        default_type "text/plain";
        try_files $uri =404;
    }

    location / {
        return 301 https://$host$request_uri;
    }
}

# 443: 실제 서비스
server {
    listen 443 ssl;
    http2 on;
    server_name gundaero.kozow.com;

    # 인증서
    ssl_certificate     /etc/letsencrypt/live/gundaero.kozow.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/gundaero.kozow.com/privkey.pem;


    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 1d;

    client_max_body_size 10m;

    location / {
        proxy_pass         http://app_backend;
        proxy_http_version 1.1;
        proxy_set_header   Host              $host;
        proxy_set_header   X-Real-IP         $remote_addr;
        proxy_set_header   X-Forwarded-For   $proxy_add_x_forwarded_for;
        proxy_set_header   X-Forwarded-Proto $scheme;
        proxy_set_header   Connection        "";
        proxy_read_timeout 60s;
        send_timeout       60s;
    }
}
