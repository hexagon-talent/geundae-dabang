ENV=dev
SPRING_PROFILES_ACTIVE=dev
SERVER_PORT=8080
TZ=Asia/Seoul

# DB (컨테이너 네트워크 기준)
SPRING_DATASOURCE_URL=jdbc:mysql://mysql:3306/appdb?useSSL=false&characterEncoding=utf8&serverTimezone=Asia/Seoul
SPRING_DATASOURCE_USERNAME=YOUR_DEV_DB_USER
SPRING_DATASOURCE_PASSWORD=YOUR_DEV_DB_PASSWORD
MYSQL_ROOT_PASSWORD=CHANGE_ME_DEV_ROOT

# Redis
SPRING_REDIS_HOST=redis
SPRING_REDIS_PORT=6379
SPRING_REDIS_PASSWORD=

# S3
S3_BUCKET=your-dev-bucket
S3_REGION=ap-northeast-2

# CORS (예: 개발용 IP/로컬 프론트)
CORS_ALLOWED_ORIGINS=http://<dev-host-or-ip>,http://localhost:3000

# OAuth2 (Kakao - Dev)
KAKAO_CLIENT_ID=YOUR_DEV_KAKAO_REST_API_KEY
KAKAO_REDIRECT_URI=http://<dev-host-or-ip>/login/oauth2/code/kakao

# Kakao Admin Key (서버-사이드)
KAKAO_ADMIN_KEY=CHANGE_ME_DEV

# TourAPI
TOURAPI_BASE_URL=https://apis.data.go.kr/B551011/KorService2
TOURAPI_APP_NAME=GEUNDAERO
TOURAPI_SERVICE_KEY=CHANGE_ME_DEV

# JWT (dev에서는 비워두면 application-dev.yml의 기본값 dev-secret 사용)
JWT_SECRET=
JWT_ACCESS_TOKEN_TTL=900
JWT_REFRESH_TOKEN_TTL=1209600

# watchtower는 dev에서 OFF
WATCHTOWER_ENABLE=false

# dev는 로컬 build 사용(값 비워둠)
DOCKER_IMAGE=
